@{
    ViewData["EditHouse"] = "Edit Household & Invite or Remove Roommates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["EditHouse"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Change Household Information</h4>
            <hr />
                <div class="form-group">
                    <label>Household Name</label>
                    <input class="form-control" />
                </div>
                <div class="form-group">
                    <label>Household Address</label>
                    <input class="form-control" />
                </div>
        <button type="submit" class="btn btn-default">Save Changes</button>
            <br />
            <br />
</form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Invite or Remove Roommate</h4>
            <hr />
            <div class="form-group">
                <label>Invite Roommate</label>
                <input class="form-control" />
            </div>
            <button type="submit" class="btn btn-default">Invite</button>
            <br />
            <br />
            <div class="form-group">
                <label>Remove Roommate</label>
                <input class="form-control" />
            </div>
            <button type="submit" class="btn btn-default">Remove</button>
            <br />
            <br />
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
